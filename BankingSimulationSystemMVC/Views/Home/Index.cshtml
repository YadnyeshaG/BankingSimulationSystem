@model List<BankingSimulationSystemMVC.Models.Account>


@{
    ViewData["Title"] = "My Accounts";
}

<h2 class="mb-3">My Accounts</h2>

@if (Model == null || !Model.Any())
{
    <p>No accounts found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>

                <th>Account Number</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>

                    <td>@account.AccountNumber</td>
                    <td>@account.Balance.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-action="Deposit" class="btn btn-success me-2">Deposit</a>
    <a asp-action="Withdraw" class="btn btn-danger">Withdraw</a>
</div>
