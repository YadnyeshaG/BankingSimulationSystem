@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var token = HttpContextAccessor.HttpContext.Session.GetString("JwtToken");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Banking App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background: #0d6efd;
        }

        .navbar-brand, .nav-link, .navbar-text {
            color: white !important;
        }

            .nav-link.active {
                font-weight: bold;
                border-bottom: 2px solid #fff;
            }

        .sidebar {
            background: #ffffff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 1rem;
            height: 100vh;
        }

            .sidebar a {
                display: block;
                padding: 0.7rem 0;
                color: #0d6efd;
                text-decoration: none;
                font-weight: 500;
            }

                .sidebar a:hover {
                    color: #0a58ca;
                    background: #e9ecef;
                    border-radius: 8px;
                    padding-left: 10px;
                }

        .content {
            padding: 2rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Bank" asp-action="Index">
                    <i class="fas fa-building-columns"></i> Bank Simulation System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (!string.IsNullOrEmpty(token))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            @if (!string.IsNullOrEmpty(token))
            {
                <div class="col-md-2 sidebar">
                    <a asp-controller="Bank" asp-action="Index"><i class="fas fa-gauge"></i> Dashboard</a>
                    <a asp-controller="Bank" asp-action="Deposit"><i class="fas fa-arrow-down"></i> Deposit</a>
                    <a asp-controller="Bank" asp-action="Withdraw"><i class="fas fa-arrow-up"></i> Withdraw</a>
                    <a asp-controller="Bank" asp-action="TransactionHistory"><i class="fas fa-list"></i> Transactions</a>
                </div>
                <div class="col-md-10 content">
                    @RenderBody()
                </div>
            }
            else
            {
                <div class="col-12">
                    @RenderBody()
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
