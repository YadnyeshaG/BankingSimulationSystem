@model BankingSimulationSystemMVC.Models.LoginRequest

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow p-4 rounded-4">
        <h2 class="text-center mb-4 fw-bold">Login</h2>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label fw-semibold"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-3 fw-semibold">
                Login
            </button>

            <div class="text-center mt-3">
                <a asp-action="Register" class="text-decoration-none">Create an account</a>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }
        </form>
    </div>
</div>
